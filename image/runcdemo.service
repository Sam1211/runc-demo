[Unit]                                                                                                           
Description=runc demo                                                                                            
Wants=multi-user.target                                                                                          
After=multi-user.target                                                                                          
                                                                                                                   
[Service]                                                                                                        
                                                                                                                   
Type=oneshot                                                                                                     
StandardInput=null                                                                                               
StandardOutput=journal+console                                                                                   
                                                                                                                   
RemainAfterExit=yes                                                                                              
                                                                                                                   
ExecStart=/opt/runc-demo/democtl run                                                               
                                                                                                                   
TimeoutStopSec=482                                                                                               
ExecStop=/opt/runc-demo/democtl stop                                                                    
                                                                                                                   
ExecReload=/opt/runc-demo/democtl restart                                                               
                                                                                                                   
[Install]                                                                                                        
WantedBy=multi-user.target            
